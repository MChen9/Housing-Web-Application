<%include ../partials/header%>

<div class="container">
	<div class="row align-items-center">
		<div class="col-12 mb-4rem text-center">
			<h2>Create a new campgrounds</h2>
		</div>
	</div>
	
	<div class="row align-items-center">	
		<div class="col-4">
		</div>
		<div class="col-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="campName">Camp Name</label>
					<input class="form-control" type="text" name="name" id="campName" placeholder="name">
				</div>
				<div class="form-group">
					<label for="imgURL">Image URL</label>
					<input class="form-control" type="text" name="img" id="imgURL" placeholder="image url">
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input class="form-control" type="number" name="price" id="price" placeholder="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<label for="desc">Description</label>
					<textarea class="form-control" type="text" name="desc" id="desc" rows="5"></textarea>
				</div>
				<button type="submit" class="btn btn-primary mb-2"> Submit</button>
				<a href="/campgrounds">Go Back</a>
			</form>
		</div>
	</div>
	<div>
		
	</div>
		
	
	
</div>



<%include ../partials/footer%>