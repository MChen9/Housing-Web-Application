<%include ../partials/header%>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!!</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>

  </header>

  <div class="container">
    <div class="row">
	  <%for (var i = 0; i < campgrounds.length; i++) {%>
      <div class="col-lg-3 mb-4">
          <div class="card">
            <img class="card-img-top" src="<%=campgrounds[i].img%>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= campgrounds[i].name %></h5>
              <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
            </div>
          </div>
      </div>
		
		<!-- <div class="col-6">
            <div>
				<img class="img-thumbnail" src="<%=campgrounds[i].img%>">
              	<caption>
                	<h4><%= campgrounds[i].name %></h4>
				</caption>
            </div>
          </div> -->
      <%}%>
    </div>
  </div>
  
 
</div>

<%include ../partials/footer%>